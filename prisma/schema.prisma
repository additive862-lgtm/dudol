generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum AttachmentType {
  IMAGE
  FILE
  LINK
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String
  nickname      String?
  phoneNumber   String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  posts         Post[]
  comments      Comment[]
}

model VisitorLog {
  id    Int      @id @default(autoincrement())
  date  DateTime @unique @default(now())
  count Int      @default(0)
}

model Post {
  id          Int          @id @default(autoincrement())
  title       String
  content     String?
  author      String?
  authorId    String?
  category    String       @default("free")
  views       Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User?        @relation(fields: [authorId], references: [id])
  comments    Comment[]
  attachments Attachment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  author    String
  authorId  String?
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  user      User?    @relation(fields: [authorId], references: [id])
}

model Attachment {
  id        Int            @id @default(autoincrement())
  fileUrl   String
  fileName  String
  fileType  AttachmentType
  post      Post           @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
}
